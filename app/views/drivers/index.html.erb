<p style="color: green"><%= notice %></p>

<h1>Drivers</h1>


<% if @drivers.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Contact</th>
        <th scope="col"></th>
        <th scope="col"></th>

      </tr>
    </thead>
    <tbody>
      <% @drivers.each do |driver| %>
        <tr>
          <td><%=  driver.name %></td>
          <td><%= driver.contact %></td>
          <td>
            <%= link_to "Edit", edit_driver_path(driver.id), class: "btn btn-primary"%>
            <td>

             <%= button_to 'Delete', delete_driver_path(driver), method: :delete, class: 'btn btn-danger' %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No vehicles found.</p>
<% end %>
<div style="display: flex; justify-content: center;">
  <%= link_to "Add Driver", new_driver_path, class: "btn btn-secondary" %>
</div>
